{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  // This is just for Instruction
  // Input your Domain/Port here and rename this file to appsettings.json and appsettings.Development.json
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://Domain:Port" // *:80
      },
      "Https": {
        "Url": "https://Domain:Port" // *:443
      }
    },
    "Certificates": {
      "Default": {
        "Path": "PathTo/fullchain.pem",
        "KeyPath": "PathTo/privkey.pem"
      }
    }
  }
}
