<Window x:Class="WeißSchwarzViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helper="clr-namespace:WeißSchwarzViewer.WPFHelper"
        xmlns:local="clr-namespace:WeißSchwarzViewer"
        mc:Ignorable="d"
        Title="Weiß Schwarz Set Viewer" Height="800" Width="1250">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--#region Top-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5 5 0 5">
                <Button x:Name="btnCheckUpdate" Content="Check Updates" Margin="0 0 5 0" Click="btnCheckUpdate_Click"/>
                <Button x:Name="btnUpdate" Content="Update" IsEnabled="False" Click="btnUpdate_Click"/>
                <Label x:Name="lblVersion" Content="Latest Version" Foreground="Green"/>
            </StackPanel>
            <Label Content="Version" Grid.Column="1" x:Name="lblAppVersion" HorizontalAlignment="Right" Margin="0 5 5 5"/>
        </Grid>

        <!--#endregion-->

        <!--#region Content-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--#region Releases/Sets-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Sets" HorizontalContentAlignment="Center"/>
                <ListBox Grid.Row="1" Name="lbReleases" Margin="5 0 0 0" SelectionChanged="lbSets_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="300" Text="{Binding Name}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding NumberOfCards, StringFormat={}Cards: {0}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <!--#endregion-->
            <!--#region Cards-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="Cards" HorizontalContentAlignment="Center"/>
                    <Label Content="Sort:"/>
                    <ComboBox Name="cbSorter" SelectionChanged="cbSorter_SelectionChanged" SelectedIndex="0"/>
                    <ComboBox Name="cbSorterAorD" SelectionChanged="cbSorterAorD_SelectionChanged" SelectedIndex="0"/>
                </StackPanel>
                <ListBox Grid.Row="2" Name="lbCards" Margin="5 0 0 0" SelectionChanged="lbCards_SelectionChanged">
                    <ListBox.Resources>
                        <helper:ActualWidthCorrector x:Key="ActualWidthCorrector"/>
                    </ListBox.Resources>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel x:Name="spCards" Margin="0 0 0 10">
                                <TextBlock Text="{Binding LongID, StringFormat={}ID: {0}}"/>
                                <TextBlock Text="{Binding Name, StringFormat={}Title: {0}}"/>
                                <TextBlock Text="{Binding Rarity, StringFormat={}Rarity: {0}}"/>
                                <TextBlock Text="{Binding Color, StringFormat={}Color: {0}}"/>
                                <TextBlock Text="{Binding Type, StringFormat={}Type: {0}}"/>
                                <TextBlock Text="{Binding Level, StringFormat={}Level: {0}}"/>
                                <TextBlock Text="{Binding Cost, StringFormat={}Cost: {0}}"/>
                                <TextBlock Text="{Binding Power, StringFormat={}Power: {0}}"/>
                                <TextBlock Text="{Binding Soul, StringFormat={}Soul: {0}}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Width="{Binding ActualWidth, ElementName=tbIllustration}" Name="tbTriggers" Grid.Column="0" Text="Triggers:"/>
                                    <ListBox Grid.Column="1" ItemsSource="{Binding Triggers}" BorderThickness="0" IsHitTestVisible="False">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"></StackPanel>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                    <TextBlock Margin="0 0 5 0" Text="{Binding TriggerTypeUI}"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Width="{Binding ActualWidth, ElementName=tbIllustration}" Grid.Column="0" Text="Traits:"/>
                                    <ListBox Grid.Column="1" ItemsSource="{Binding Traits}" BorderThickness="0" IsHitTestVisible="False">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"></StackPanel>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="0 0 5 0" Text="{Binding Name}"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="Skill:" Width="{Binding ActualWidth, ElementName=tbIllustration}" Grid.Row="0" Grid.Column="0"/>
                                        <TextBlock Grid.Row="0" Margin="2 0 0 0" Text="{Binding SkillText, StringFormat={}{0}}" TextWrapping="Wrap" Width="{Binding ActualWidth, ElementName=lbCards, Converter={StaticResource ActualWidthCorrector}, ConverterParameter=87}"/>                                        
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                        <TextBlock Text="Falvor:" Width="{Binding ActualWidth, ElementName=tbIllustration}" Grid.Row="1"/>
                                        <TextBlock Grid.Row="1" Margin="2 0 0 0" Text="{Binding FalvorText, StringFormat={}{0}}" TextWrapping="Wrap" Width="{Binding ActualWidth, ElementName=lbCards, Converter={StaticResource ActualWidthCorrector}, ConverterParameter=87}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                                        <TextBlock Text="Illustration:" Name="tbIllustration" Grid.Row="2" />
                                        <TextBlock Grid.Row="2" Margin="2 0 0 0" Text="{Binding IllustrationText, StringFormat={}{0}}" TextWrapping="Wrap" Width="{Binding ActualWidth, ElementName=lbCards, Converter={StaticResource ActualWidthCorrector}, ConverterParameter=87}"/>
                                    </StackPanel>
                                </Grid>
                                
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <!--#endregion-->
            <!--#region Image-->
            <Grid Grid.Column="2">
                <Image Name="imgCardImage"/>
            </Grid>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->

        <!--#region Bottom-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="processBar" Grid.Column="0" Margin="5" Minimum="0" Maximum="100" Value="0"/>
            <Label x:Name="lblProcess" Grid.Column="1" Content="Done" HorizontalAlignment="Right" />
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
