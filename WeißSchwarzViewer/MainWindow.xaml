<Window x:Class="WeißSchwarzViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helper="clr-namespace:WeißSchwarzViewer.WPFHelper"
        xmlns:local="clr-namespace:WeißSchwarzViewer"
        mc:Ignorable="d"
        Title="Weiß Schwarz Set Viewer" Height="800" Width="1250">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--#region Top-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5 5 0 5">
                <Button x:Name="btnCheckUpdate" Content="Check Updates" Margin="0 0 5 0" Click="btnCheckUpdate_Click"/>
                <Button x:Name="btnUpdate" Content="Update" IsEnabled="False" Click="btnUpdate_Click"/>
                <Label x:Name="lblVersion" Content="Latest Version" Foreground="Green"/>
            </StackPanel>
            <Label Content="Version" Grid.Column="1" x:Name="lblAppVersion" HorizontalAlignment="Right" Margin="0 5 5 5"/>
        </Grid>

        <!--#endregion-->

        <!--#region Content-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--#region Releases/Sets-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Sets" HorizontalContentAlignment="Center"/>
                <ListBox Grid.Row="1" Name="lbReleases" Margin="5 0 0 0" SelectionChanged="lbReleases_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="300" Text="{Binding Name}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding NumberOfCards, StringFormat={}Cards: {0}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <!--#endregion-->
            <!--#region Cards-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="Cards" HorizontalContentAlignment="Center"/>
                    <Label Content="Sort:"/>
                    <ComboBox Name="cbSorter" SelectionChanged="cbSorter_SelectionChanged" SelectedIndex="0"/>
                    <ComboBox Name="cbSorterAorD" SelectionChanged="cbSorterAorD_SelectionChanged" SelectedIndex="0"/>
                </StackPanel>
                <ListBox Grid.Row="2" Name="lbCards" Margin="5 0 0 0">
                    <ListBox.Resources>
                        <helper:ActualWidthCorrector x:Key="ActualWidthCorrector"/>
                    </ListBox.Resources>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel x:Name="spCards" Margin="0 0 0 10">
                                <TextBlock Grid.Row="0"  Text="{Binding CardId, StringFormat={}ID: {0}}"/>
                                <TextBlock Grid.Row="1" Text="{Binding Name, StringFormat={}Title: {0}}"/>
                                <TextBlock Grid.Row="2" Text="{Binding Rarity, StringFormat={}Rarity: {0}}"/>
                                <TextBlock Grid.Row="3" Text="{Binding Color, StringFormat={}Color: {0}}"/>
                                <TextBlock Grid.Row="4" Text="{Binding Type, StringFormat={}Type: {0}}"/>
                                <TextBlock Grid.Row="5" Text="{Binding Level, StringFormat={}Level: {0}}"/>
                                <TextBlock Grid.Row="6" Text="{Binding Cost, StringFormat={}Cost: {0}}"/>
                                <TextBlock Grid.Row="7" Text="{Binding Power, StringFormat={}Power: {0}}"/>
                                <TextBlock Grid.Row="8" Text="{Binding Soul, StringFormat={}Soul: {0}}"/>
                                <TextBlock Grid.Row="9" Text="{Binding SkillText, StringFormat={}Text: {0}}" TextWrapping="Wrap" Width="{Binding ActualWidth, ElementName=lbCards, Converter={StaticResource ActualWidthCorrector}, ConverterParameter=35}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <!--#endregion-->

        </Grid>
        <!--#endregion-->

        <!--#region Bottom-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="processBar" Grid.Column="0" Margin="5" Minimum="0" Maximum="100" Value="0"/>
            <Label x:Name="lblProcess" Grid.Column="1" Content="Done" HorizontalAlignment="Right" />
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
